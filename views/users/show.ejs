<%- include("../partials/header") %>




<div class = "row mt-5 pt-5">
    <div class = "col-md-4">
        <!--filler-->
    </div>
    <div class = "col-md-6 d-flex align-items-start flex-column">
        <div class = "flex-row">
            <h1 style = "float: left;" class = "display-4"><%=user.username%></h1>
            <%if(currentUser && user.username == currentUser.username){%>
                <a class = "btn btn-outline-primary btn-sm ml-3 mt-4" href = "/users/<%=user.id%>/edit">Edit Profile</a>
            <%}%>
        </div>
        <h4 class = "pt-3"><%=user.firstName + " " + user.lastName%></h4>
    </div>
    <div class = "col-md-2">

    </div>
</div>

<h2 class = "text-center mt-5 pt-5"><%=user.firstName%>'s Meditations</h2>

<%if(meditations.length == 0) {%>
    <h3 class = "text-center mt-5">No Meditations Yet :(</h3>
                   
<%} else if(meditations.length==1){%>
    <div class = "row mt-3 pt-3">
        <%meditations.forEach(function(meditation){%>
        <div class = "col-md-3">

        </div>
        <div class = "col-md-6">
            <div class = "card mb-4 d-flex flex-fill flex-column align-items-start">
                <div class = "card-title ml-3 mt-3">
                    <a class = "h4" style = "color: black;" href = "/meditations/<%=meditation._id%>"><%=meditation.name%></a>
  
                </div>
                <p class = "card-text mb-3 px-3"><%= meditation.description%></p>
                <p class = "ml-3 mt-auto">
                    <a href="/meditations/<%=meditation._id%>" class = "btn btn-primary">Take me there!</a>
                </p>
            </div>
        </div>
        <div class = "col-md-3">

        </div>
    <%});%>
    </div>

<%} else {%>
    <div class = "row mt-3 pt-3">
        <div class = "card-group">
        <%meditations.forEach(function(meditation){%>
            <div class = "col-md-4 col-sm-6 d-flex"> 
                <div class = "card mb-4 d-flex flex-fill flex-column align-items-start">
                    <div class = "card-title ml-3 mt-3">
                        <a class = "h4" style = "color: black;" href = "/meditations/<%=meditation._id%>"><%=meditation.name%></a>
                    </div>
                    <p class = "card-text mb-3 px-3"><%=meditation.description%></p>
                    <p class = "ml-3 mt-auto">
                        <a href="/meditations/<%=meditation._id%>" class = "btn btn-primary">Take me there!</a>
                    </p>
                </div>
            </div>
        <%});%> 
        </div>
    </div>         
<%}%>
 


 

<%- include("../partials/footer") %>